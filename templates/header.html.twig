{% block header %}
    <header class="site-header">
        <div class="container">
            <nav class="navbar">
                <div class="navbar-brand">
                    <a>QuizApp</a>
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link">Quiz</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('leaderboard') }}" class="nav-link">Leaderboard</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('selectAll_quizz') }}" class="nav-link">Répondre à un Quizz</a>
                    </li>
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODO') or is_granted('ROLE_PREMIUM')%}
                            <li class="nav-item">
                                <a href="{{ path('app_courses_index') }}" class="nav-link">Répondre à un Cours</a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODO') %}
                            <li class="nav-item">
                                <a href="{{ path('quizz_choose') }}" class="nav-link">Administration Quizz</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('admin_course_index') }}" class="nav-link">Administration Cours</a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN')%}
                            <li class="nav-item">
                                <a href="{{ path('admin_users') }}" class="nav-link">Administration utilisateur</a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ path('admin_tag_index') }}" class="nav-link">Administration Tags</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a href="{{ path('profile') }}" class="nav-link">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('logout') }}" class="nav-link">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ path('faceit_login') }}" class="nav-link">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </header>
{% endblock %}