{# templates/create_quizz/choose.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Administration - Quiz{% endblock %}
{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Administration des Quiz</h1>
        <a href="{{ path('quizz_create') }}" class="btn btn-primary mb-4">Cr√©er un nouveau Quiz</a>

        {% include '_search_filters.html.twig' with {
            searchPlaceholder: "Rechercher un quiz...",
            searchFunction: "searchQuizzes",
            itemType: "quizz",
            defaultRoute: 'quizz_choose'
        } %}

        <!-- Supprimer la table, et utiliser une grille pour les quiz -->
        <div class="quiz-grid" id="quizGrid">
            {% for quiz in quizzes %}
                <div class="quiz-card">
                    <h3>{{ quiz.name }}</h3>
                    <p>{{ quiz.description|slice(0, 50) }}...</p>
                    <div class="quiz-tags">
                        {% for tag in quiz.tags %}
                            <span class="tag-badge">{{ tag.name }}</span>
                        {% endfor %}
                    </div>
                    <div>
                        <a href="{{ path('quizz_edit', {'id': quiz.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <form action="{{ path('quizz_delete', {'id': quiz.id}) }}" method="post" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Voulez-vous vraiment supprimer ce quiz ?')">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div class="no-quizzes">
                    <p>Aucun quiz disponible pour le moment.</p>
                </div>
            {% endfor %}
        </div>

        <!-- Ajouter la section de pagination -->
        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(quizzes) }}
        </div>
    </div>

    <style>
        .quiz-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }
        .quiz-card {
            background: linear-gradient(145deg, #ffffff, #f0f0f0);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
            border: 1px solid #ddd;
            position: relative;
            z-index: 1;
        }
        .quiz-card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            background: linear-gradient(145deg, #f8f9fa, #e9ecef);
            z-index: 10;
        }
        .quiz-card h3 {
            color: #333;
            margin-bottom: 10px;
        }
        .quiz-card p {
            color: #666;
        }
        .quiz-done {
            background-color: #4CAF50;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            margin-top: 10px;
        }
        .quiz-notdone {
            background-color: #af4c4c;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            margin-top: 10px;
        }
        .no-quizzes {
            text-align: center;
            width: 100%;
            padding: 20px;
        }
        .search-container {
            margin: 20px auto;
            text-align: center;
        }
        .search-container input {
            padding: 10px;
            width: 300px;
            border-radius: 20px;
            border: 1px solid #ccc;
        }
        .tag-filter-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin: 20px 0;
        }
        .tag-filter {
            display: inline-block;
            padding: 8px 15px;
            background-color: #f8f9fa;
            border-radius: 20px;
            text-decoration: none;
            color: #333;
            border: 1px solid #ddd;
            transition: all 0.2s;
        }
        .tag-filter:hover {
            background-color: #e9ecef;
            color: #FF7700;
        }
        .tag-filter.active {
            background-color: #FF7700;
            color: white;
            border-color: #FF7700;
        }
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .pagination a {
            color: #f0f0f0;
            padding: 8px 16px;
            text-decoration: none;
            border: 1px solid #ddd;
            margin: 0 4px;
            border-radius: 4px;
        }
        .pagination a.active {
            background-color: #FF7700;
            color: white;
            border: 1px solid #FF7700;
        }
        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
        .tag-badge {
            background-color: #FF7700;
            color: white;
            padding: 3px 8px;
            border-radius: 15px;
            font-size: 0.8em;
            white-space: nowrap;
        }
    </style>

    <script>
        function applyFilters() {
            let searchTerm = document.getElementById('searchInput').value;
            let url = "{{ path('quizz_choose') }}?search=" + encodeURIComponent(searchTerm);
            let selectedTag = "{{ selectedTag }}";
            if (selectedTag) {
                url += "&tag=" + encodeURIComponent(selectedTag);
            }
            window.location.href = url;
        }
        function searchQuizzes() {
            let input = document.getElementById('searchInput');
            let filter = input.value.toUpperCase();
            let grid = document.getElementById('quizGrid');
            let cards = grid.getElementsByClassName('quiz-card');
            for (let i = 0; i < cards.length; i++) {
                let title = cards[i].getElementsByTagName('h3')[0];
                if (title.innerHTML.toUpperCase().indexOf(filter) > -1) {
                    cards[i].style.display = "";
                } else {
                    cards[i].style.display = "none";
                }
            }
        }
    </script>
{% endblock %}
