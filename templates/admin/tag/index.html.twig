{% extends 'base.html.twig' %}

{% block title %}Administration - Tags{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Gestion des tags</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="mb-4">
            <a href="{{ path('admin_tag_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer un nouveau tag
            </a>
        </div>

        {% if tags|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Nombre de cours associés</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tag in tags %}
                        <tr>
                            <td>{{ tag.id }}</td>
                            <td>{{ tag.name }}</td>
                            <td>{{ tag.courses|length }}</td>
                            <td>
                                <a href="{{ path('admin_tag_edit', {'id': tag.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                                {% if tag.courses|length == 0 %}
                                    <form action="{{ path('admin_tag_delete', {'id': tag.id}) }}" method="post" style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce tag ?')">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                {% else %}
                                    <button class="btn btn-sm btn-danger disabled" title="Ce tag est utilisé par {{ tag.courses|length }} cours">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                Aucun tag trouvé. <a href="{{ path('admin_tag_new') }}">Créer un nouveau tag</a>.
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .disabled {
            opacity: 0.65;
            cursor: not-allowed;
        }
    </style>
{% endblock %}
