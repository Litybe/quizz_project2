{% extends 'base.html.twig' %}

{% block title %}Modifier le Tag{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Modifier le tag : {{ tag.name }}</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_tag_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour Ã  la liste
                    </a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
