{% extends 'base.html.twig' %}

{% block title %}Modifier le cours : {{ course.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Modifier le cours : {{ course.title }}</h1>

        {% if app.flashes('error') %}
            <div class="alert alert-danger">
                {{ app.flashes('error')[0] }}
            </div>
        {% endif %}

        {{ form_start(form) }}
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.title) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.description) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.youtubeVideoId) }}
                    <div class="input-group">
                        {{ form_widget(form.youtubeVideoId, {'attr': {'class': 'form-control', 'placeholder': 'ID de la vidéo YouTube'}}) }}
                    </div>
                    <small class="form-text text-muted">
                        Exemple : Pour l'URL "https://www.youtube.com/watch?v=dQw4w9WgXcQ", l'ID est "dQw4w9WgXcQ"
                    </small>
                    <div class="text-danger">
                        {{ form_errors(form.youtubeVideoId) }}
                    </div>
                </div>

                <div class="form-group mt-3">
                    {{ form_label(form.quiz) }}
                    {{ form_widget(form.quiz, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">
                        {{ form_errors(form.quiz) }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Mettre à jour
                </button>
                <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-info">
                    <i class="fas fa-eye"></i> Voir le cours
                </a>
                <a href="{{ path('admin_course_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    <style>
        .form-group {
            margin-bottom: 1.5rem;
        }
        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border-radius: 0.5rem;
        }
        .card-body {
            padding: 2rem;
        }
        .card-footer {
            background-color: transparent;
            border-top: none;
            padding: 1rem 2rem;
        }
        .btn {
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }
    </style>
{% endblock %}
